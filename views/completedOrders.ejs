<!doctype html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>POS: cmpltdOrders</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
  
    <link rel="stylesheet" href="profile.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" integrity="sha384-DyZ88mC6Up2uqS4h/KRgHuoeGwBcD4Ng9SiP4dIRy0EXTlnuz47vAwmeGwVChigm" crossorigin="anonymous">
  </head>
<body>

  

    <div class="page-header text-center">
        <h1><span class="fa fa-anchor"></span> Completed Orders</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-12">
          <h3>Order Queue</h3>          
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Order Number</th>
                <th scope="col">Customer Name</th>
                <th scope="col">Order</th>
                <th scope="col">Barista</th>
                <th scope="col">Served</th>
                <th scope="col">delete</th>

              </tr>
            </thead>

            <tbody>
       
              <% for(var i=0 ; i<coffeeOrders.length; i++) {%>
                <% if (coffeeOrders[i].status) {%>
                <tr>
                  <th scope="row"><%= i + 1 %></th>
                  <td><%= coffeeOrders[i].customerName %></td>
                  <td><span><%= coffeeOrders[i].coffee %></span> <br> <span><%= coffeeOrders[i].tea %></span><br><span><%= coffeeOrders[i].juice %></span></td><td><%= coffeeOrders[i].barista %></td><td><i class="fas fa-user-check"></i></td>
                  <td><i id="<%= coffeeOrders[i]._id %>" class="fas fa-trash-alt"></i></td>
                <% } %>
                </tr> 
              <% } %>
            </tbody>
          </table>

          <button> <a href="/profile"> see orders</a></button>
          <button> <a href="/order"> place order</a></button>
          <button> <a href="/"> home</a></button>
          

</div>



